{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "./../src/",
    "testEnvironment": "node",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
      "@aurora/(.*)": "<rootDir>/../src/@aurora/$1",
      "@apps/(.*)": "<rootDir>/../src/@apps/$1",
      "@api/(.*)": "<rootDir>/../src/@api/$1"
    }
}